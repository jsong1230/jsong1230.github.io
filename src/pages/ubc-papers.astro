const t = content[lang];
---

<BaseLayout title="UBC Papers - Jeffrey Song" lang={lang}>
  <div class="container-narrow py-8 sm:py-12">
    <h1 class="text-3xl sm:text-4xl font-bold mb-4 sm:mb-6">{t.title}</h1>
    
    <p class="text-gray-600 dark:text-gray-400 mb-8">
      {t.description}
    </p>

    <div class="space-y-6">
      {papers.map((paper) => (
        <div class="p-6 rounded-lg border border-gray-200 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-900/50">
          <div class="flex items-start justify-between mb-3">
            {paper.link ? (
              <a 
                href={paper.link}
                target="_blank"
                rel="noopener noreferrer"
                class="text-lg font-semibold text-gray-900 dark:text-gray-100 flex-1 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
              >
                {paper.title}
              </a>
            ) : (
              <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 flex-1">
                {paper.title}
              </h2>
            )}
            <div class="flex items-center gap-2 ml-4">
              <span class="text-xs px-2 py-1 rounded bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
                {paper.type === 'journal' ? t.journal : paper.type === 'conference' ? t.conference : t.book}
              </span>
              <span class="text-sm text-gray-500 dark:text-gray-400 whitespace-nowrap">
                {paper.year}
              </span>
            </div>
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
            {paper.authors}
          </p>
          <p class="text-sm text-gray-700 dark:text-gray-300">
            {paper.venue}
          </p>
        </div>
      ))}
    </div>

    <div class="mt-12">
      <a 
        href={lang === 'ko' ? '/publications?lang=ko' : '/publications?lang=en'}
        class="text-sm text-blue-600 dark:text-blue-400 hover:underline"
      >
        {t.back}
      </a>
    </div>
  </div>
</BaseLayout>

