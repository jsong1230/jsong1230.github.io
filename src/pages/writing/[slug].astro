---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allPosts = await getCollection('posts');
  
  return allPosts.map((post) => ({
    params: { slug: post.id },
    props: { post, lang: post.data.lang, allPosts },
  }));
}

const { post, lang, allPosts } = Astro.props;
const { Content } = await post.render();

// Find the corresponding post in the other language (same date)
const postDate = post.data.date;
const otherLang = lang === 'ko' ? 'en' : 'ko';
const correspondingPost = allPosts.find(p => 
  p.data.date === postDate && p.data.lang === otherLang
);
---

<BaseLayout title={`${post.data.title} - Writing - Jeffrey Song`} lang={lang}>
  <article 
    class="container-narrow py-8 sm:py-12"
    data-post-date={post.data.date}
    data-post-lang={lang}
    data-corresponding-post={correspondingPost?.id || ''}
  >
    <header class="mb-6 sm:mb-8">
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 sm:mb-4">{post.data.title}</h1>
      <time class="text-sm text-gray-500 dark:text-gray-400">
        {new Date(post.data.date).toLocaleDateString(lang === 'ko' ? 'ko-KR' : 'en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })}
      </time>
    </header>
    
    <div class="prose-content text-gray-700 dark:text-gray-300 leading-relaxed">
      <Content />
    </div>
    
    <style>
      .prose-content {
        line-height: 1.75;
      }
      .prose-content h2 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }
      @media (min-width: 640px) {
        .prose-content h2 {
          font-size: 1.875rem;
        }
      }
      .prose-content h3 {
        font-size: 1.25rem;
        font-weight: 600;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
      }
      @media (min-width: 640px) {
        .prose-content h3 {
          font-size: 1.5rem;
        }
      }
      .prose-content p {
        margin-bottom: 1.25rem;
      }
      .prose-content ul, .prose-content ol {
        margin-bottom: 1.25rem;
        padding-left: 1.5rem;
      }
      .prose-content li {
        margin-bottom: 0.5rem;
      }
      .prose-content a {
        color: rgb(37, 99, 235);
        text-decoration: underline;
      }
      .prose-content a:hover {
        color: rgb(29, 78, 216);
      }
      .prose-content code {
        background-color: rgba(0, 0, 0, 0.05);
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        font-size: 0.875em;
      }
      .dark .prose-content code {
        background-color: rgba(255, 255, 255, 0.1);
      }
      .prose-content pre {
        background-color: rgba(0, 0, 0, 0.05);
        padding: 1rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin-bottom: 1.25rem;
      }
      .dark .prose-content pre {
        background-color: rgba(255, 255, 255, 0.05);
      }
      .prose-content blockquote {
        border-left: 4px solid rgb(156, 163, 175);
        padding-left: 1rem;
        margin-left: 0;
        margin-bottom: 1.25rem;
        font-style: italic;
      }
      .dark .prose-content blockquote {
        border-left-color: rgb(75, 85, 99);
      }
    </style>
    
    <footer class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <a 
          href={`/writing?lang=${lang}`}
          class="text-blue-600 dark:text-blue-400 hover:underline"
        >
          ← {lang === 'ko' ? '목록으로 돌아가기' : 'Back to list'}
        </a>
        {correspondingPost && (
          <a 
            href={`/writing/${correspondingPost.id}?lang=${otherLang}`}
            class="text-blue-600 dark:text-blue-400 hover:underline"
          >
            {lang === 'ko' ? 'English version →' : '한글 버전 →'}
          </a>
        )}
      </div>
    </footer>
  </article>
</BaseLayout>

