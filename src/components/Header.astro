---
import LanguageToggle from './LanguageToggle';
import DarkModeToggle from './DarkModeToggle';

const url = Astro.url;
const langParam = url.searchParams.get('lang');
const currentLang = (langParam === 'en' || langParam === 'ko') ? langParam : 'ko';
const langQuery = currentLang !== 'ko' ? `?lang=${currentLang}` : '';

const getLink = (path: string) => {
  return `${path}${langQuery}`;
};
---

<header class="border-b border-gray-200 dark:border-gray-800 sticky top-0 z-50 bg-white/80 dark:bg-black/80 backdrop-blur-sm">
  <nav class="container-narrow py-4 flex items-center justify-between">
    <a href={getLink('/')} class="text-lg font-semibold hover:opacity-70 transition-opacity tracking-tight">
      Jeffrey Song
    </a>
    <div class="flex items-center gap-6">
      <a href={getLink('/about')} class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors">About</a>
      <a href={getLink('/work')} class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors">Work</a>
      <a href={getLink('/publications')} class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors">Publications</a>
      <a href={getLink('/writing')} class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors">Writing</a>
      <LanguageToggle client:load />
      <DarkModeToggle client:load />
    </div>
  </nav>
</header>

